
<div id="satanberg" style="width: 300px; height: 300px; margin: 0 auto; margin-bottom: 20px;">
  <%= link_to new_post_path do %>
<img align="center" src="/satanberg.jpg" title="New Post">
<% end %>
<p align="center">Welcome to Acebook - The Facebook (The Remix).</p>
<p align="center"><%= link_to new_post_path do %>Click here to give me all your personal information!<% end %></p>
</div><!-- // satanberg -->

<div id="container" class="columns" style="margin: 0 auto; width: 66%;">

<div id="newsfeed" class="column is-two-thirds" style="margin: 0 auto;">

<% @posts.reverse.each do |post| %>

  <div id="loop-container">
  <div id="the-post" style="width: 90%; padding-left: 20px; padding-top: 10px; padding-bottom: 10px;">
  <p><b><%= post.user.fname %> <%= post.user.lname %></b></p>
  <p><%= simple_format(post.message) %></p>
  </div><!--// the post -->


<div id="social-info" style="width: 100%; height: 40px; background-color: #60A5A9; border-radius: 0px 0px 20px 20px; padding-left: 15px;">
  <div id="like-controls" style="float: left; width: 15%; height: 40px; padding-left: 5px; padding-top: 5px;">
  <div id="like-button" style="width: 27%; float: left;">
    <% pre_like = post.likes.find { |like| like.user_id == current_user.id} %>
  <% if pre_like %>
    <%= button_to 'Unlike', post_like_path(post, pre_like), method: :delete, :class => "button is-small is-danger" %>
  <% else %>
    <%= button_to ' Like', post_likes_path(post), method: :post, :class => "flame" %>
  <% end %>
  </div><!-- // like button -->
  <%= commontator_thread(post) %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Burn Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <div id="likes-count" style="width: 30px; float: right;">
  <% if post.likes.count != 0 %>
  <%= post.likes.count %> <img src="/flame.png" width="12px" height: auto;>
  <% end %>
  </div><!-- // likes count -->

  </div><!--// like controls -->

<div id="timestamp" style="float: right; height: 40px; color: white; padding-right: 20px; padding-top: 5px;" ><%= post.created_at.to_formatted_s(:acebook_timestamp)%>
</div><!-- // timestamp -->
</div><!-- // social-info -->
</div><!-- // loop container -->


<% end %>
</div><!--// newsfeed -->

<div id="ad-column" class="column is-one-third" style="margin: 0 auto;">
  <div class="ad">
    <img src="/hulga.jpg">
    <h3>Holga wants to meet you!</h3>
  </div>
  <div class="ad">
    <img src="/jacked-clown.jpg">
    <h3>How I got abs by eating McDonalds!</h3>
  </div>
  <div class="ad">
    <img src="/einstein.jpg">
    <h3> How I learnt to code in only 5 minutes! </h3>
  </div>
</div><!-- // ad column -->

</div><!-- // container -->
